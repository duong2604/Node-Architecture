{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "baseUrl": "src",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowImportingTsExtensions": false
  },
  "include": ["src/**/*"]
}
